# Focus windows
lcmd - h : yabai -m window --focus west
lcmd - j : yabai -m window --focus south
lcmd - k : yabai -m window --focus north
lcmd - l : yabai -m window --focus east

# Move windows
shift + lcmd - h : yabai -m window --swap west
shift + lcmd - j : yabai -m window --swap south
shift + lcmd - k : yabai -m window --swap north
shift + lcmd - l : yabai -m window --swap east

# Focus workspace (space)
lcmd - 1 : yabai -m space --focus 1
lcmd - 2 : yabai -m space --focus 2
lcmd - 3 : yabai -m space --focus 3
lcmd - 4 : yabai -m space --focus 4
lcmd - 5 : yabai -m space --focus 5
lcmd - 6 : yabai -m space --focus 6
lcmd - 7 : yabai -m space --focus 7
lcmd - 8 : yabai -m space --focus 8
lcmd - 9 : yabai -m space --focus 9
lcmd - 0 : yabai -m space --focus 10

# Move workspace
rcmd - 1 : yabai -m window --space 1; yabai -m space --focus 1
rcmd - 2 : yabai -m window --space 2; yabai -m space --focus 2
rcmd - 3 : yabai -m window --space 3; yabai -m space --focus 3
rcmd - 4 : yabai -m window --space 4; yabai -m space --focus 4
rcmd - 5 : yabai -m window --space 5; yabai -m space --focus 5
rcmd - 6 : yabai -m window --space 6; yabai -m space --focus 6
rcmd - 7 : yabai -m window --space 7; yabai -m space --focus 7
rcmd - 8 : yabai -m window --space 8; yabai -m space --focus 8
rcmd - 9 : yabai -m window --space 9; yabai -m space --focus 9
rcmd - 0 : yabai -m window --space 10; yabai -m space --focus 10

# Applications
shift + lcmd - 1 : open -a "Zen"; yabai -m space --focus 1
shift + lcmd - 2 : open -a "Ghostty"; yabai -m space --focus 2
shift + lcmd - 3 : open -a "Zed"; yabai -m space --focus 3
shift + lcmd - 4 : open -a "Postman"; yabai -m space --focus 4
shift + lcmd - 5 : open -a "Obsidian"; yabai -m space --focus 5
shift + lcmd - 9 : open -a "Spotify"; yabai -m space --focus 9
shift + lcmd - 0 : open -a "Discord"; yabai -m space --focus 0

# Resize
lcmd - u : yabai -m window --resize left:-20:0
lcmd - p : yabai -m window --resize right:20:0
lcmd - i : yabai -m window --resize bottom:0:-20
lcmd - o : yabai -m window --resize top:0:20

# Next Layout Orientation
lcmd - 0x32 : yabai -m window --insert east
lcmd - 0x1B : yabai -m window --insert south

# Window Controls
lcmd - space : yabai -m window --toggle float
shift + lcmd - space : yabai -m window --toggle float
shift + lcmd - q : yabai -m window --close

# Reload Yabai Config
shift + lcmd - r : yabai --restart-service; sketchybar --reload; skhd --restart-service; brew services restart boders
